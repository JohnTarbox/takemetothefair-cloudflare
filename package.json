{
  "name": "takemetothefair-cloudflare",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:preview": "npm run pages:build && wrangler pages dev .vercel/output/static",
    "pages:deploy": "npm run pages:build && wrangler pages deploy .vercel/output/static",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply takemetothefair-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply takemetothefair-db --remote",
    "db:seed": "npx tsx scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:backup": "bash scripts/db-backup.sh prod",
    "db:backup:local": "bash scripts/db-backup.sh local",
    "db:restore": "bash scripts/db-restore.sh",
    "db:restore:prod": "bash scripts/db-restore.sh",
    "db:backups": "bash scripts/db-list-backups.sh",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "PLAYWRIGHT_BASE_URL=https://meetmeatthefair.com playwright test e2e/smoke.spec.ts --project=chromium"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.4",
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^16.1.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.3",
    "lucide-react": "^0.563.0",
    "next": "^15.1.0",
    "next-auth": "^5.0.0-beta.30",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.71.1",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/react": "^14.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.30.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "jsdom": "^24.0.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^2.1.9",
    "wrangler": "^4.60.0"
  }
}
